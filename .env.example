# FX3110 Monitor - Environment Variables
# For full configuration, use config.yaml (see config.example.yaml).
# Environment variables override config.yaml values.

# Device type: fx3110, rutm50, or fx4200
DEVICE_TYPE=fx3110

# Network interface for ping tests
BIND_INTERFACE=eth0

# Ping target for connectivity testing
DEST=8.8.8.8

# Refresh intervals (seconds)
MAIN_LOOP_INTERVAL=5
PUBLIC_IP_REFRESH_SECONDS=60

# --- FX3110 settings ---
DEVICE_BASE=http://192.168.1.1

# --- RUTM50 settings ---
RUTM50_SSH_HOST=192.168.1.1
RUTM50_SSH_USER=root
RUTM50_SSH_PORT=22
# RUTM50_SSH_KEY=/home/pi/.ssh/id_rsa
# RUTM50_SSH_PASSWORD=your_password
# RUTM50_CELL_IFACE=mob1s1a1
RUTM50_USE_COLLECTOR_SCRIPT=false
RUTM50_COLLECTOR_SCRIPT_PATH=/tmp/teltonika_collector.sh

# --- FX4200 settings ---
# FX4200_BASE_URL=https://192.168.1.1
# FX4200_PASSWORD=your_admin_password
# FX4200_VERIFY_SSL=false
