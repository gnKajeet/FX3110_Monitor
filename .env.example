# FX3110 Monitor Configuration
# Copy this file to .env and adjust values as needed

# Network Interface (set to eth0 for Raspberry Pi ethernet)
BIND_INTERFACE=eth0

# Ping target for connectivity testing
DEST=8.8.8.8

# FX3110 device IP address
DEVICE_BASE=http://192.168.1.1

# Refresh intervals (seconds)
STATUS_REFRESH_SECONDS=5
DEVICES_REFRESH_SECONDS=10
PUBLIC_IP_REFRESH_SECONDS=60

# Maximum device names to show in logs
MAX_DEVICE_NAMES=5
