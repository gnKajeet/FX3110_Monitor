# RUTM50_CMD_SERVING=gsmctl -K
# RUTM50_CMD_NEIGHBOUR=gsmctl -I
# RUTM50_CMD_VOLTE=gsmctl -v
# RUTM50_CMD_BAND=gsmctl -b
# RUTM50_CMD_INFO=gsmctl --info
# RUTM50_CMD_WAN=ubus call network.interface.wan status
# RUTM50_CMD_LAN=ubus call network.interface.lan status
# RUTM50_CMD_APN=uci get network.mobile.apn
# RUTM50_CMD_ICCID=gsmctl -i

# Collector script mode (reduces SSH sessions from ~20 to 1 per cycle)
# Requires deploying teltonika_collector.sh to the router first:
#   scp scripts/teltonika_collector.sh root@<router>:/tmp/
#   ssh root@<router> "chmod +x /tmp/teltonika_collector.sh"
RUTM50_USE_COLLECTOR_SCRIPT=false
RUTM50_COLLECTOR_SCRIPT_PATH=/tmp/teltonika_collector.sh

# Refresh intervals (seconds)
MAIN_LOOP_INTERVAL=5
STATUS_REFRESH_SECONDS=0
DEVICES_REFRESH_SECONDS=0
PUBLIC_IP_REFRESH_SECONDS=60

# Maximum device names to show in logs
MAX_DEVICE_NAMES=5
